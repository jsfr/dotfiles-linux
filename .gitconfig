[user]
	name = Jens Fredskov
	email = jensfredskov@protonmail.ch
[credential]
	helper = cache
[color]
	ui = true
[push]
	default = simple
[diff]
	tool = kdiff3
    compactionHeuristic = true
[merge]
	tool = kdiff3
[difftool]
	prompt = false
[alias]
    a = add
    aa = add -A
    b = "!git for-each-ref --sort='-authordate' --format='%(authordate)%09%(objectname:short)%09%(refname)' refs/heads | sed -e 's-refs/heads/--'"
    c = commit --verbose
    cm = commit --verbose -m
    co = checkout
    d = diff
    dc = diff --cached
    f = fetch
    l = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
    pl = pull
    plr = pull --rebase
    pu = push
    pua = push --all
    s = status -s
    spp = "!git stash && git pull --rebase && git stash pop"
    st = stash
    stl = stash list --date=local
    stp = stash pop
    up = "!git fetch && git rebase --autostash FETCH_HEAD"
    yolo = "!git commit -m \"YOLO: `curl -s http://whatthecommit.com/index.txt`\""
[core]
	editor = nvim
	autocrlf = input
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
